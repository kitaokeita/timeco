<div class="container">
 <div class="wrapper">
  <div class="col-sm-6 col-md-8 col-md-offset-2", id="singupbackground">
 
 <div class="col-sm-6 col-md-4 col-md-offset-4">
  
          <h2>登録</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <% unless resource.errors.empty? %>
　<script type= "text/javascript">
　　<% resource.errors.full_messages.each do |msg| %>
　　　toastr.error('<%= msg %>');
　　<% end %>
　</script>
<% end %>


            <div class="field">
              <%= f.label '名前　' %><br />
              <%= f.text_field :username, :class => 'form-control',autofocus: true %>
            </div>

            

            <div class="field">
              <%= f.label 'メールアドレス ' %><br />
              <%= f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => "メールアドレス" %>
            </div>

            <div class="field">
              <%= f.label 'パスワード' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off",:class => 'form-control', :placeholder => "パスワード" %>
            </div>

            <div class="field">
              <%= f.label 'パスワード(上と同じパスワード)'%><br />
              <%= f.password_field :password_confirmation, autocomplete: "off",:class => 'form-control',:placeholder => "パスワード" %>
            </div>

            <div class="actions">
              <%= f.submit "登録", :class => "btn btn-lg btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
          </div>
    
    </div>
    
  </div>
</div>
