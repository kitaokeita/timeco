<div class="container">
 <div class="wrapper">
 <div class="col-sm-6 col-md-8 col-md-offset-2", id="singupbackground">
 
 <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, :class => 'form-control',:placeholder => "メールアドレス"  %>
        </div>

        <div class="field">
          <%= f.label 'パスワード' %><br />
          <%= f.password_field :password, autocomplete: "off" ,:class => 'form-control',:placeholder => "パスワード
           "%>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label "PCに記憶しますか" %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      
      </div>
      </div>
      </div>
</div>