<div class="col-sm-6 col-md-4 col-md-offset-4">
<%= form_for :ticket, url: tickets_path  do |f| %>

<div class="field">
  <%= f.label :あなたのタイムシェア名前 %>
  <%= f.text_field :title, :class => 'form-control' %>
</div>

<div class="field">
  <%= f.label :あなたのタイムシェア説明 %>
  <%= f.text_area :content, :class => 'form-control' %>
</div>

<div class="field">
  <%= f.label :使える時間 %>
  <%= f.select :timeuse, [["30分間", "30"], ["60分間", "60"], ["90分間", "90"], ["120分間", "120"], ["150分間", "150"], ["180分間", "180"]],{}, :class => "form-control" %>
</div>

<div class="field">
  <%= f.label :タイムシェア種類 %>
  <%= f.select :sort, [["フリートク", "フリートク"], ["キャリア", " キャリア"], ["写真", "写真"], ["企画", "企画"], ["料理", "料理"], ["デザイン", "デザイン"] , ["web", "web"], ["語学", "語学"]],{}, :class => "form-control" %>
</div>

<div class="field">
  <%= f.label :価格 %>
  <%= f.number_field :price, in: 1000..10000, step: 500, value: 2000, :class => "form-control"%>
</div>

<div class="field">
　<%= f.label :手段 %>
 <%= f.select :area, [["渋谷", "渋谷"], ["新宿", "新宿"], ["東京", "東京"], ["つくば", "つくば"], ["秋葉原", "秋葉原"], ["オンライン", "オンライン　"]],{}, :class => "form-control" %>
</div>



 <p>
    <%= f.submit "登録", :class => "btn btn-primary" %>
  </p>


<% end %>
</div>